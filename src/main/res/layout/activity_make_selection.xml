<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword"
    android:background="@color/white"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons8_chevron_left_30"
            android:padding="5dp"
            android:background="@color/white"
            android:id="@+id/back2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_black"
            android:text="Make Selection"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli_extralight"
            android:text="Select which contact detail should we use to reset your password?"
            android:textSize="18sp" />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:layout_marginTop="50dp"
           android:background="@color/white"
           android:padding="10dp">
           <ImageView
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:src="@drawable/icons8_phone_message_64"
               android:layout_centerVertical="true"
               android:layout_marginRight="20dp"
               android:id="@+id/phone_icon"/>
           <TextView
               android:id="@+id/phone_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/muli_extralight"
               android:text="Via SMS"
               android:textSize="25sp"
               android:layout_toRightOf="@id/phone_icon"
               android:layout_marginTop="35dp"/>
           <TextView
               android:id="@+id/phone_des"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/muli_extralight"
               android:textSize="18sp"
               android:text="9966852888"
               android:layout_toRightOf="@id/phone_icon"
               android:layout_below="@id/phone_title"
               android:textColor="@color/black"
               />

           <Button
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#00FFFFFF"
               android:id="@+id/phonebtn"/>
       </RelativeLayout>
        <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="180dp"
           android:layout_marginTop="50dp"
           android:background="@color/white"
           android:padding="10dp">
           <ImageView
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:src="@drawable/icons8_gmail_30"
               android:layout_centerVertical="true"
               android:layout_marginRight="20dp"
               android:id="@+id/email_icon"/>
           <TextView
               android:id="@+id/email_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/muli_extralight"
               android:text="Via Email"
               android:textSize="25sp"
               android:layout_toRightOf="@id/email_icon"
               android:layout_marginTop="35dp"/>
           <TextView
               android:id="@+id/email_des"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/muli_extralight"
               android:textSize="18sp"
               android:text="jsk.bollimunta@gmail.com"
               android:layout_toRightOf="@id/email_icon"
               android:layout_below="@id/email_title"
               android:textColor="@color/black"
               />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:id="@+id/emailbtn"/>


       </RelativeLayout>

    </LinearLayout>

</ScrollView>